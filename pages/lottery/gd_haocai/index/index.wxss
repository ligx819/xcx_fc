    #sel_2 ul,#sel_3 ul,#sel_5 ul,#sel_6 ul,#sel_7 ul{ padding-left: 20px; }
}
@media (min-width:320px) and (max-width:360px){
    .emulator_sec .sel_cc ul li{ margin:5px; }
    #sel_sx ul,#sel_sj ul{ padding-left: 10px; }
}
@media (max-width:320px){
    .emulator_sec .sel_cc ul{ padding-left: 0; }
    .emulator_sec #sel_num ul{padding-left: 15px}
    .emulator_sec .sel_cc ul li{ margin:5px; }
    #sel_sx ul,#sel_sj ul{ padding-left: 0px; }
}