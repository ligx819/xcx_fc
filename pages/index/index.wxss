/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

page {
  background: #e0e0e0;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.ball {
  display: inline-block;
  width: 25px;
  height: 25px;
  border-radius: 50%;
  line-height: 25px;
  margin: 3px;
  text-align: center;
}

.red_all_ball {
  color: white;
  background: #f24343;
  border: 1px solid #f24343;
}

.blue_all_ball {
  color: white;
  background: #4a96f6;
  border: 1px solid #4a96f6;
}

.i_top {
  width: 100%;
  font-size: 16px;
  padding: 20rpx 0;
  border-bottom: 10px solid #f2f2f2;
  background: #fff;
}

.i_top .col-4 {
  width: 33.33%;
  text-align: center;
  display: inline-block;
}

.i_top .col-4 image {
  width: 70px;
  height: 70px;
  display: block;
  margin: 0 auto 5px;
}

.i_cont {
  width: 100%;
  margin-bottom: 50px;
}

.pr {
  padding-right: 3px;
}

.i_cont .list-group {
  clear: both;
  margin-bottom: 20px;
  background: #fff;
}

.i_cont .list-group-item {
  padding: 10px 0;
  border-bottom: 1px solid #e0e0e0;
  position: relative;
}

.list-group-item:last-child {
  margin-bottom: -20px;
}

.i_cont .list-group-item:after,.my_group::after {
  content: ">";
  display: inline-block;
  color: #bbbabe;
  font-size: 30px;
  position: absolute;
  top: 41%;
  right: 10px;
}

.i_cont .list-group-item .h5 {
  color: #7a7a7a;
  font-size: 12px;
  padding: 0 10px;
  /*margin-top: 0;*/
  margin-bottom: 15px;
}

.i_cont .list-group-item .h5 text:first-child {
  font-size: 14px;
  color: #000;
  margin-right: 10px;
}

.i_cont .list-group-item .i_ball {
  padding-left: 5px;
}

.i_cont .shiji {
  color: #000;
  margin-left: 15px;
}

.fixed_foot {
  line-height: normal;
  padding: 0;
  border: none;
}

.fixed_foot .col-6 {
  display: inline-block;
  width: 50%;
  padding: 5px 0;
  text-align: center;
  font-size: 14px;
  color: #999;
}

.fixed_foot .col-6 image {
  width: 22px;
  height: 22px;
  display: block;
  margin: 0 auto;
}

.fixed_foot .col-6.active {
  color: #f24242;
  background: #bbdafb;
}

.my_top {
  width: 100%;
   background: url('data:image/png;base64,') no-repeat no-repeat; 
  background-size: 100% 100%;
  text-align: center;
  padding: 10px 0 20px;
  color: #fff;
  margin-bottom: 15px;
}

.my_top .img {
  width: 90px;
  height: 90px;
  border: 1px solid #fff;
  border-radius: 50%;
  margin: 0 auto 5px;
  overflow: hidden;
  position: relative;
}
.my_top image{
  width: 82px;
  height: 82px;
  border: 2px solid #c2181f;
  border-radius: 50%;
  position: relative;
  top: 2px;
}

.my_cont {
  width: 100%;
}

.my_group {
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #fff;
  padding: 20px 0;
  border-bottom: 1px solid #e0e0e0;
  position: relative;
}
.my_cont navigator:last-child{
  margin-top: 15px;
}
.my_group::after {
  top: 18px;
}

.my_group .pl {
  margin-left: 20px;
}

.my_group .pr {
  margin-right: 30px;
  color: #999;
  font-size: 14px;
}

.my_group .pl image {
  width: 30px;
  height: 30px;
  margin-right: 5px;
}

.my_group .pl text {
  position: relative;
  top: -9px;
  font-size: 16px;
}