
@import '../../app.wxss';

.picker {
  display: inline-block;
  margin-right: 5px;
}

.top_nav {
  overflow: hidden;
  background: #666;
  /* display:none;  */
  color: #fff;
  margin: 0;
  padding: 0 15px;
}

.radio, .checkbox {
  position: relative;
  display: block;
  min-height: 20px;
  margin-top: 10px;
  margin-bottom: 10px;
}

radio, checkbox {
  transform: scale(0.6);
}

.radio label, .checkbox label {
  padding-left: 10px;
  margin-bottom: 0;
  font-weight: 400;
  cursor: pointer;
}

.radio-inline, .checkbox-inline {
  display: inline-block;
  padding-left: 10px;
  margin-bottom: 0;
  font-weight: 400;
  vertical-align: middle;
  cursor: pointer;
}

label {
  display: inline-block;
  max-width: 100%;
  margin-bottom: 5px;
  font-weight: 700;
}

.date-picker {
  padding: 0 0 0 15px;
}

.date-picker picker {
  color: rgb(204, 51, 0);
  font-size: 12px;
  background: #eee;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 2px 5px;
}

.date-picker .picker {
  width: 100px;
  text-align: center;
  padding: 5px 0;
  margin-right: 0;
}

.date-picker button {
  display: inline-block;
  width: 100%;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.49;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  color: #fff;
  background-color: #5bc0de;
  border-color: #46b8da;
}